go_test(
    name = "core_test",
    size = "small",
    srcs = ["core_test.go"],
    embed = [":core"],
    deps = ["//datatypes"],
)

go_test(
    name = "time_test",
    size = "small",
    srcs = ["time_test.go"],
    embed = [":core"],
    deps = ["//datatypes"],
